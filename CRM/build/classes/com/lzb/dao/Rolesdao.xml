<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzb.dao.Rolesdao">


	<select id="SelectRoles" resultType="roles" parameterType="fenYe">
		select * from roles

		limit #{page},#{pageSize}
	</select>
	<select id="SelectCount" resultType="int" parameterType="fenYe">
		select count(Rid) from roles
	</select>

	<insert id="InsertRoles" parameterType="roles">
		insert into roles (Rname)values(#{Rname})
	</insert>

	<update id="UpdateRoles" parameterType="roles">
		update roles set Rname=#{Rname} where Rid=#{Rid}
	</update>

	<delete id="deleteRoles" parameterType="int">
		delete from roles where Rid=#{id}
	</delete>
	<!-- 查询角色所有的子模块id -->
	<select id="SelectRolesModulesid" resultType="modules"
		parameterType="int">
		select distinct Mid from modules where Mid in (
		select ModuleId from RoleModules where RoleId in (
		select RoleId from userroles where UserId=#{id}))
	</select>
	<!-- 查询所有父id -->
	<select id="SelectModulesFuid" resultType="modules">
		select * from Modules where Weight=1
	</select>
	<!-- 根据父模块id查子模块id -->
	<select id="SelectZiModules2" resultType="modules">
		select * from Modules where ParentId=#{id}
	</select>
	<select id="SelectModule" resultType="modules" parameterType="int">
		select * from Modules where Mid=#{id}
	</select>

	<insert id="IntegerRolesModules" parameterType="fenYe">
		insert into RoleModules (ModuleId,RoleId)values(#{page},#{pageSize})
	</insert>
	<delete id="DeleteRolesModules" parameterType="int">
		delete from RoleModules where RoleId=#{id}
	</delete>
	<select id="selectUserRolesCount" parameterType="int" resultType="int">
	select count(URrid) from UserRoles where RoleId=#{id}
	</select>
</mapper>